<!-- Extend from Base -->
{% extends "base.html.j2" %}

{% block content %}
  <table>
    <tr valign="top">
      <td>
        <img src="{{ user.avatar(128) }}" alt="{{ user.nickname }}'s Avatar'" />
      </td>
      <td>
        <h1>User: {{ user.nickname }}</h1>
        {% if user.about_me %}<p>{{ user.about_me }}</p>{% endif %}
        {% if user.last_seen %}<p><i>Last seen on: {{ user.last_seen }}</i></p>{% endif %}
        <!-- If the User is Viewing Their Own Profile, Add Edit Button -->
        {% if user.id == g.user.id %}<p><a href="{{ url_for('edit') }}">Edit</a></p>{% endif %}
      </td>
    </tr>
  </table>
  <hr />
  {% if posts %}
    {% for post in posts %}
      {% include 'post.html.j2' %}
    {% endfor %}
  {% endif %}
{% endblock %}