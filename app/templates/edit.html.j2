<!-- Extend from Base -->
{% extends "base.html.j2" %}

{% block content %}
  <h1>Edit Your Profile</h1>
  <form action="" method="post" name="edit">
    {{ form.hidden_tag() }}
    <table>
      <tr>
        <td>
          Your Nickname:
        </td>
        <td>
          {{ form.nickname(size=24) }}
        </td>
      </tr>
      <tr>
        <td>
          About Yourself:
        </td>
        <td>
          {{ form.about_me(cols=32, rows=4) }}
        </td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td>
          <input type="submit" value="Save Changes" />
        </td>
      </tr>
    </table>
  </form>
  <a href="{{ url_for('user',nickname=g.user.nickname) }}">Back to Profile</a>
{% endblock %}